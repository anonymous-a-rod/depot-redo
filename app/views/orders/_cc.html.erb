<fieldset data-payment-target="additionalFields" data-type="Credit card">
  <div class="my-5">
    <%= form.label :credit_card_number %>
    <%= form.password_field :credit_card_number, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  </div>

  <div class="my-5">
    <%= form.label :expiration_date %>
    <%= form.text_field :expiration_date, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium",
      size:9, placeholder: "e.g. 03/22" %>
  </div>
</fieldset>
